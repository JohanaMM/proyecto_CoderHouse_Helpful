{
  "name": "scss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "limpiacss": "purgecss --css ./css/**/*.css --content *.html --output ./dist/css/",
    "limpiascss": "purgecss --scss ./scss/**/*.scss --content *.html --output ./dist/scss/",
    "build-boostrap-css": "node-sass --include-path scss scss/boostrap.scss css/boostrap.css",
    "watch-boostrap-css": "nodemon -e scss -x \"npm run build-boostrap-css\"",
    "build-css": "node-sass --include-path scss scss_main/style.scss css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-purgecss": "^4.1.3",
    "hyphen": "^1.6.4",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.15",
    "purgecss": "^4.1.3",
    "purgescss": "^1.1.0"
  },
  "dependencies": {
    "gulp-live-server": "^0.0.31",
    "gulp-sass": "^5.0.0",
    "sass": "^1.44.0"
  }
}
